<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/colorTextViewId"
        android:layout_height="88dp"
        android:layout_width="match_parent"
        android:text="Color"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textAppearance="@android:style/TextAppearance.Medium"
         android:paddingStart="16dp"
        android:gravity="center_vertical"
        android:background="#ff0000"
        tools:ignore="HardcodedText,RtlSymmetry" />
    <TextView
        android:id="@+id/phraseTextViewId"
        android:layout_height="88dp"
        android:layout_width="match_parent"
        android:text="Phrases"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textAppearance="@android:style/TextAppearance.Medium"
       android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:background="#aaaaa0"
        tools:ignore="HardcodedText,RtlSymmetry" />
    <TextView
        android:id="@+id/familyTextViewId"
        android:layout_height="88dp"
        android:layout_width="match_parent"
        android:text="Family Member"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:background="#0baaaa"
        tools:ignore="HardcodedText,RtlSymmetry" />
    <TextView
        android:id="@+id/numberTextViewId"
        android:layout_height="88dp"
        android:layout_width="match_parent"
        android:text="Number"
        android:paddingStart="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:gravity="center_vertical"
        android:background="#cbaccc"
        tools:ignore="HardcodedText,RtlSymmetry" />
    <TextView
        android:id="@+id/email_text_view"
        android:layout_height="88dp"
        android:layout_width="match_parent"
        android:text="Email"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingStart="16dp"
        android:textColor="@android:color/black"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:gravity="center_vertical"
        android:background="#1233dd"
        tools:ignore="HardcodedText,RtlSymmetry" />
    <TextView
        android:id="@+id/SMS_text_view"
        android:layout_height="88dp"
        android:layout_width="match_parent"
        android:text="SMS"
        android:textColor="@android:color/black"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="#88bbdd"
        tools:ignore="HardcodedText,RtlSymmetry" />
    <TextView
        android:id="@+id/number2TextViewId"
        android:layout_height="88dp"
        android:layout_width="match_parent"
        android:text="Number2"
        android:textColor="@android:color/black"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:gravity="center_vertical"
        android:background="#cbaccc"
        android:paddingStart="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,RtlSymmetry" />
</LinearLayout>









